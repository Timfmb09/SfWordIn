
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {# Bootstrap link #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">

        {% block stylesheets %}
            {# it's in public folder that we find all our public files like css/ js/ ... #}
            <link rel="styleSheet" href="{{asset('Css/style.css')}}">
            {# asset() -> Automatically goes & check the public folder #}
        {% endblock %}
    </head>
    
    <body>

        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_place') }}">Les lieux</a></li>
                <li><a href="{{ path('app_language') }}">Les langues</a></li>
                <li><a href="{{ path('app_event') }}">Les évènements</a></li>

                {% if app.user %}
                <li><a href="{{ path('app_logout') }}"> Se déconnecter</a></li>
                 <li><a href="">Mon profil</a>
                {% else %}
                <li><a href="{{ path('app_login') }}"> Se connecter</a></li> 
                <li><a href="{{ path('app_register') }}"> S'enregistrer</a></li>
                {% endif %}

                {% if is_granted("ROLE_ADMIN") %}
                    <a href="">PANNEAU D'ADMINISTRATION</a></li>
                {% endif %}
            </ul>
         </nav>

        {% block body %}
        {% endblock %}

        {% block javascripts %}
            <script> src="{{ asset('js/script.js') }}"</script>
        {% endblock %}

    </body>
</html>